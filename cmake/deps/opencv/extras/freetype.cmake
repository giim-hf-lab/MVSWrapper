include("freetype.cmake" NO_POLICY_SCOPE)
include("harfbuzz.cmake" NO_POLICY_SCOPE)

set(FREETYPE_FOUND TRUE)
get_property(FREETYPE_INCLUDE_DIRS
	TARGET freetype
	PROPERTY INTERFACE_INCLUDE_DIRECTORIES
)
set(FREETYPE_LIBRARIES "${CMAKE_ARCHIVE_OUTPUT_DIRECTORY}/freetype.lib")

set(HARFBUZZ_FOUND TRUE)
get_property(HARFBUZZ_INCLUDE_DIRS
	TARGET harfbuzz
	PROPERTY INTERFACE_INCLUDE_DIRECTORIES
)
set(HARFBUZZ_LIBRARIES "${CMAKE_ARCHIVE_OUTPUT_DIRECTORY}/harfbuzz.lib")
if (WIN32)
	list(APPEND HARFBUZZ_LIBRARIES
		"gdi32"
		"usp10"
		"rpcrt4"
	)
endif ()
